<?xml version="1.0" encoding="utf-8"?>
<!-- File: app/src/main/res/values/themes.xml -->
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. Use Material3 for that modern feel. -->
    <style name="Theme.CarServiceBook" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/accent_blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Sleek Background -->
        <item name="android:windowBackground">@color/background_light</item>
    </style>

    <!-- Style for Sleek Cards -->
    <style name="SleekCard" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>
</resources>